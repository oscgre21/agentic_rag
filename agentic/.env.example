# Agentic API Configuration

# Database connection URL
AGENTIC_DB_URL=postgresql+psycopg://ai:ai@localhost:5532/ai

# Ollama model to use for chat responses
AGENTIC_MODEL_ID=qwen3:4b

# Ollama model to use for embeddings
AGENTIC_EMBEDDER_MODEL=nomic-embed-text

# Semantic Cache Configuration
# Enable or disable semantic caching (true/false)
AGENTIC_CACHE_ENABLED=true

# Similarity threshold for cache hits (0.0 to 1.0)
# Higher values = more strict matching
AGENTIC_CACHE_SIMILARITY_THRESHOLD=0.88

# Time to live for cache entries in hours
AGENTIC_CACHE_TTL_HOURS=24

# Maximum number of cache entries to keep
AGENTIC_CACHE_MAX_ENTRIES=1000

# Model for response formatting
AGENTIC_RESPONSE_MODEL=qwen2.5:7b-instruct

# Custom formatting prompt (optional)
# If not set, uses the default insurance-focused prompt
# You can provide a multiline prompt using quotes
# AGENTIC_FORMATTING_PROMPT="Your custom prompt here..."

# File upload configuration
# Maximum file size in bytes (default: 10MB)
AGENTIC_MAX_FILE_SIZE=10485760

# Logging configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# DEBUG shows detailed information about agent operations
AGENTIC_LOG_LEVEL=INFO